<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/act_small_margin"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorDarkGray"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:contentPadding="@dimen/act_medium_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCampaign"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/act_medium_margin"
                android:contentDescription="@string/item_list_campaigns_iv_logo" />

            <TextView
                android:id="@+id/tvNameCampaign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivCampaign"
                android:fontFamily="@font/gotham_bold" />

            <TextView
                android:id="@+id/tvTimeCampaign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNameCampaign"
                android:layout_marginTop="@dimen/act_small_margin"
                android:layout_toEndOf="@+id/ivCampaign"
                android:drawablePadding="@dimen/act_tiny_margin"
                android:drawableStart="@drawable/ic_time"
                android:gravity="center"
                android:includeFontPadding="false" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>