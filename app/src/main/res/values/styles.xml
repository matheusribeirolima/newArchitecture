<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:fontFamily">@font/gotham_book_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:editTextColor">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="AppTheme.OverlapSystemBar" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">false</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="IntroTheme" parent="AppTheme">
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowBackground">@drawable/bg_login_dark</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:fontFamily">@font/gotham_book_regular</item>
    </style>

    <style name="ButtonWhiteTheme">
        <item name="android:background">@drawable/bg_radius_button_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ButtonAccentTheme">
        <item name="android:background">@drawable/ripple_radius_accent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>

    <style name="ButtonGradientTheme">
        <item name="android:background">@drawable/bg_radius_button_gradient</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>

    <style name="TitleTheme">
        <item name="android:layout_marginTop">@dimen/act_small_margin</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:lineSpacingExtra">@dimen/font_line_spacing_8</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_size_title_36</item>
    </style>

    <style name="SubtitleTheme">
        <item name="android:layout_marginBottom">@dimen/act_medium_margin</item>
        <item name="android:layout_marginTop">@dimen/act_medium_margin</item>
        <item name="android:lineSpacingExtra">@dimen/font_line_spacing_8</item>
        <item name="android:textSize">@dimen/font_size_large_20</item>
    </style>

    <style name="ToolbarTheme" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/font_size_medium_16</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>

</resources>
